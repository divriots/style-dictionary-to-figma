{
  "name": "@divriots/style-dictionary-to-figma",
  "version": "0.0.0",
  "description": "A utility that transforms a style-dictionary object into something Figma Tokens plugin understands",
  "license": "MIT",
  "author": "divRiots <joren@divriots.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/divriots/style-dictionary-to-figma.git"
  },
  "type": "module",
  "main": "index.js",
  "files": [
    "index.js",
    "index.d.ts",
    "src/**/*"
  ],
  "scripts": {
    "build:types": "tsc -p tsconfig.build.types.json",
    "format": "npm run format:eslint && npm run format:prettier",
    "format:eslint": "eslint --ext .js,.html . --fix",
    "format:prettier": "prettier \"**/*.{js,md}\" \"package.json\" --write",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --ext .js,.html .",
    "lint:prettier": "prettier \"**/*.js\" --list-different || (echo '↑↑ these files are not prettier formatted ↑↑' && exit 1)",
    "lint:types": "tsc",
    "prepare": "husky install",
    "release": "npm run build:types && changeset publish",
    "test": "web-test-runner --coverage",
    "test:view:coverage": "cd coverage/lcov-report && npx http-server -o -c-1",
    "test:watch": "web-test-runner --watch"
  },
  "devDependencies": {
    "@changesets/cli": "^2.20.0",
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@open-wc/eslint-config": "^7.0.0",
    "@types/parse-author": "^2.0.1",
    "@web/test-runner": "^0.13.27",
    "@web/test-runner-playwright": "^0.8.8",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "prettier-package-json": "^2.6.0",
    "typescript": "^4.5.5"
  },
  "keywords": [
    "design tokens",
    "figma",
    "style-dictionary"
  ],
  "exports": {
    ".": "./index.js"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "all"
  }
}
